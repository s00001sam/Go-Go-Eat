<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Main" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/orange</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
    </style>

    <style name="DialogStyle" parent="Theme.AppCompat.Dialog">
    </style>

    <style name="roundedCornerStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">32dp</item>
    </style>

    <style name="SliderTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/orange</item>
    </style>

    <style name="CheckBoxTheme">
        <item name="colorAccent">#fff</item>   <!-- normal border color change as you wish -->
        <item name="colorControlNormal">#6d6d77</item>   <!-- normal border color change as you wish -->
        <item name="colorControlActivated">@color/orange</item> <!-- activated color change as you wish -->
    </style>
</resources>